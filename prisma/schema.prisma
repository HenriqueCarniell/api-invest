generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Investapp {
  id    Int    @id @default(autoincrement())
  nome  String @db.VarChar(30)
  price Int
  opcao Opcao
}

enum Opcao {
  Infra
  Desenvolvimento
  Design
  Planejamento
}